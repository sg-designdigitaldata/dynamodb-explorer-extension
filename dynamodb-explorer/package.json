{
  "name": "dynamodb-explorer",
  "publisher": "sg-digitalservices",
  "displayName": "DynamoDB Local Explorer",
  "description": "An extension to manage a local DynamoDB instance.",
  "icon": "resources/dynamo.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:dynamoDbExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "DynamoDB Explorer",
      "properties": {
        "dynamodbExplorer.endpoint": {
          "type": "string",
          "default": "http://localstack:4566",
          "description": "The endpoint URL for the DynamoDB service (e.g., http://localstack:4566 for LocalStack or http://localhost:8000 for local DynamoDB). Leave blank to use AWS default."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dynamoDbExplorer",
          "title": "DynamoDB",
          "icon": "./resources/dynamo.svg"
        }
      ]
    },
    "views": {
      "dynamoDbExplorer": [
        {
          "id": "dynamoDbExplorerTables",
          "name": "Tables"
        }
      ]
    },
    "commands": [
      {
        "command": "dynamodb-explorer.refreshTables",
        "title": "Refresh"
      },
      {
        "command": "dynamodb-explorer.createTable",
        "title": "Create Table"
      },
      {
        "command": "dynamodb-explorer.deleteTable",
        "title": "Delete Table"
      },
      {
        "command": "dynamodb-explorer.viewTableContents",
        "title": "View Contents"
      },
      {
        "command": "dynamodb-explorer.addItem",
        "title": "Add Item"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dynamodb-explorer.createTable",
          "group": "navigation",
          "when": "view == dynamoDbExplorerTables"
        },
        {
          "command": "dynamodb-explorer.refreshTables",
          "group": "navigation",
          "when": "view == dynamoDbExplorerTables"
        }
      ],      
      "view/item/context": [
        {
          "command": "dynamodb-explorer.deleteTable",
          "when": "view == dynamoDbExplorerTables",
          "group": "inline"
        },
        {
          "command": "dynamodb-explorer.viewTableContents",
          "when": "view == dynamoDbExplorerTables",
          "group": "inline"
        },
        {
          "command": "dynamodb-explorer.addItem",
          "when": "view == dynamoDbExplorerTables",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.1.6",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "ts-loader": "^9.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.864.0",
    "@aws-sdk/lib-dynamodb": "^3.864.0",
    "@aws-sdk/node-http-handler": "^3.370.0"
  },
  "scripts": {
    "bundle": "webpack --config webpack.config.js",
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": "https://github.com/sg-designdigitaldata/dynamodb-explorer-extension"
}