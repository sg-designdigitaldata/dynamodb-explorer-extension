// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
		"configurations": [
			{
				"name": "Run Extension (Bundled)",
				"type": "extensionHost",
				"request": "launch",
				"args": [
					"--extensionDevelopmentPath=${workspaceFolder}/dynamodb-explorer"
				],
				"outFiles": [
					"${workspaceFolder}/dynamodb-explorer/dist/**/*.js"
				],
				"preLaunchTask": "bundle"
			},
			{
				"name": "Run Extension (Unbundled)",
				"type": "extensionHost",
				"request": "launch",
				"args": [
					"--extensionDevelopmentPath=${workspaceFolder}/dynamodb-explorer"
				],
				"outFiles": [
					"${workspaceFolder}/dynamodb-explorer/out/**/*.js"
				],
				"preLaunchTask": "compile"
			}
		]
}
